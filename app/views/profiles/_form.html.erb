<%= form_with model: @profile, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :learning_history, "学習歴（年）" %>
    <%= f.number_field :learning_history %>
  </div>
  <div class="form-group">
    <%= f.label :purpose, "目的" %>
    <%= f.text_field :purpose %>
  </div>
  <div class="form-group">
    <%= f.label :image, "画像" %>
    <%= f.file_field :images %>
  </div>
  <div class="submit-block">
    <%= f.submit class:"button" %>
  </div>
<% end %>